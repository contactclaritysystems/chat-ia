<body>

<div id="chat-container">
  <header>
    <img src="https://i.imgur.com/1ZFTLIo.png" class="logo" alt="Clarity Systems">
  </header>

  <div id="messages"></div>

  <div id="input-area">
    <input id="input" placeholder="Écrivez votre message…" />
    <button onclick="send()">Envoyer</button>
  </div>
</div>

<script>
const webhookUrl = "https://hook.eu1.make.com/yx1iyxxlp2v2gioce3i29lr1p7ueo7fz";
const messagesDiv = document.getElementById("messages");

// Gestion de la session
let sessionId = localStorage.getItem("session_id");
if (!sessionId) {
  sessionId = Date.now() + "-" + Math.random().toString(36).substring(2);
  localStorage.setItem("session_id", sessionId);
}

// Fonction pour ajouter un message dans le chat
function addMessage(text, sender) {
  const div = document.createElement("div");
  div.className = "message " + sender;

  // Remplacer les retours à la ligne par <br> et transformer les URLs en liens cliquables
  div.innerHTML = text
    .replace(/\n/g, "<br>")
    .replace(/(https?:\/\/[^\s]+)/g, '<a href="$1" target="_blank">$1</a>');

  messagesDiv.appendChild(div);
  messagesDiv.scrollTop = messagesDiv.scrollHeight;
  return div;
}

// Message d’accueil
addMessage(
  "Pour commencer, tu fais quoi comme activité aujourd’hui ?",
  "assistant"
);

// Fonction pour envoyer le message utilisateur
function send() {
  const input = document.getElementById("input");
  const message = input.value.trim();
  if (!message) return;

  addMessage(message, "user");
  input.value = "";

  // Indicateur de typing
  const typing = document.createElement("div");
  typing.className = "typing";
  typing.textContent = "L’assistant est en train d’écrire…";
  messagesDiv.appendChild(typing);
  messagesDiv.scrollTop = messagesDiv.scrollHeight;

  // Appel webhook Make
  fetch(webhookUrl, {
  method: "POST",
  headers: { "Content-Type": "application/json" },
  body: JSON.stringify({ session_id: sessionId, message })
})
.then(async res => {
  let data;
  try {
    data = await res.json(); // essaie de parser JSON
  } catch {
    // si JSON invalide, prends le texte brut
    data = { reply: await res.text() };
  }

  typing.remove();

  if (Array.isArray(data)) {
    data.forEach(d => { if (d.reply) addMessage(d.reply, "assistant"); });
  } else if (data.reply) {
    addMessage(data.reply, "assistant");
  }
})
.catch(() => {
  typing.remove();
  addMessage("Une erreur est survenue. Merci de réessayer.", "assistant");
});
}

// Envoi sur Enter
document.getElementById("input").addEventListener("keypress", e => {
  if (e.key === "Enter") send();
});
</script>

</body>
